<xml>
	<include name="${HXCPP}/build-tool/BuildCommon.xml"/>
	
	<files id="common">
		<compilerflag value="-Iinclude"/>
		<file name="common/ExternalInterface.cpp"/>
	</files>
	
	<files id="iphone">
		<compilerflag value="-IiPhone/include"/>
		<compilerflag value="-Iinclude"/>
		<file name="iphone/SamcodesNotifications.mm"/>
	</files>
	
	<target id="NDLL" output="${LIBPREFIX}samcodesnotifications${HX_TARGET_SUFFIX}" tool="linker" toolid="${STD_MODULE_LINK}">
		<outdir name="${NDLLDIR}/${BINDIR}"/>
		<ext value=".ndll" if="windows || mac || linux"/>
		<files id="common"/>
		<files id="iphone" if="iphone"/>
	</target>
	
	<target id="default">
		<target id="NDLL"/>
	</target>
</xml>